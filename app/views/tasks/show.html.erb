<h1>id: <%= @task.id %> detail </h1>

<table class="table table-bordered">
  <tr>
    <th>id</th>
    <td><%= @task.id %></td>
  </tr>
  <tr>
    <th>Status</th>
    <td><%= @task.status %></td>
  </tr>
  <tr>
    <th>Task</th>
    <td><%= @task.content %></td>
  </tr>
</table>
<% if current_user == @task.user %>
    <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-light' %>
    <%= link_to 'Delete', @task, method: :delete, data: { confirm: 'You sureï¼Ÿ' }, class: 'btn btn-danger' %>
<% end %>